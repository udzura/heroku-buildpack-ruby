#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)

# Download and build cairo
system "bash #{File.expand_path "./compile-cairo.sh", File.dirname(__FILE__)} #{ARGV[0]}"

require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end
